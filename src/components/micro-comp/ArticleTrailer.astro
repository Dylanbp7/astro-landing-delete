---
import articulos from '../../config/articulos.json'
---
<div class="flex items-center flex-col flex-wrap gap-5">
    {
        articulos.slice(0, 3).map((articulo) => (
        <article class="flex flex-col h-auto justify-between items-stretch max-w-4xl p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
    <div class="flex justify-between items-center mb-5 text-gray-500">
        <span class="bg-gray-600 text-gray-200 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800">
            {articulo.type}
        </span>
        <span class="text-sm">{articulo.date}</span>
    </div>
    <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><a href={articulo.url}>{articulo.title}</a></h2>
    <p class=" h-12 overflow-hidden mb-5 font-light text-gray-500 dark:text-gray-400">{articulo.description}</p>
    <div class="flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <img class="w-7 h-7 rounded-full" src="../../../avatar.png" alt="Dylan Batista" />
            <span class="font-medium dark:text-white">
                Dylan
            </span>
        </div>
        <a href={articulo.url} class="inline-flex items-center font-medium text-white text-primary-600 dark:text-primary-500 hover:underline">
            Seguir leyendo
            <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
        </a>
    </div>
</article> 
        ))
    }
</div>