---
interface Props {
    title: string;
}

const { title } = Astro.props; 

import '../styles/Layout.css'
import '@fontsource-variable/inter';
import '../components/Header.astro';
import Header from '../components/Header.astro';
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Dylan Batista</title>
    <link rel="icon" type="image/png+xml" href="/avatar.png" class="rounded-full" />  
</head>
<body>
    <Header/>
    <slot/>
    <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
</body>
</html>